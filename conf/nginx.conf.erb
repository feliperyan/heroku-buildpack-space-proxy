daemon <%= ENV["DAEMON"] %>;
#Heroku dynos have at least 4 cores.
worker_processes 4;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
  gzip on;
  gzip_comp_level 2;
  gzip_min_length 512;

	server_tokens off;

	access_log /dev/null;
	error_log  stderr;

  include mime.types;
	default_type application/octet-stream;
	sendfile on;

	#Must read the body in 5 seconds.
	client_body_timeout 5;



	server {
		listen <%= ENV["PORT"] %>;
		server_name _;
		keepalive_timeout 5;

    location ~ /set-backend/(?<spark_backend>([^/]*))$ {
      add_header Set-Cookie "backend=$spark_backend;Path=/";
      default_type "text/html";
      alias /app/nginx/conf/set-backend.html;
    }

		location  / {
			auth_basic           "spark-in-space";
      auth_basic_user_file /app/nginx/conf/htpasswd;
		  if ($http_cookie !~* "backend") {
        	return 307 $scheme://$host/set-backend/1.master.<%= ENV["HEROKU_DNS_APP_NAME"] %>:8080;
      }
		  resolver <%= ENV["RESOLVER"] %>;
		  proxy_pass         $scheme://$cookie_backend;
      proxy_redirect     off;
      proxy_set_header   Host $host;
    }

	}
}